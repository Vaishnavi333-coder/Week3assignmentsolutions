<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Table - Apply Styles</title>
  <style>
    table {
      border-collapse: collapse;
      width: 60%;
      margin: 20px auto;
    }
    th, td {
      border: 1px solid #555;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #333;
      color: white;
    }
    button {
      display: block;
      margin: 15px auto;
      padding: 8px 20px;
      font-size: 16px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h2 style="text-align:center;">Employee Details</h2>
  
  <table id="empTable">
    <tr><th>ID</th><th>Name</th><th>Department</th></tr>
    <tr><td>101</td><td>John</td><td>HR</td></tr>
    <tr><td>102</td><td>Priya</td><td>Finance</td></tr>
    <tr><td>103</td><td>Amit</td><td>IT</td></tr>
    <tr><td>104</td><td>Sneha</td><td>Sales</td></tr>
  </table>

  <button id="styleBtn">Apply Styles</button>

  <script>
    document.getElementById("styleBtn").addEventListener("click", function() {
      const rows = document.getElementById("empTable").getElementsByTagName("tr");
      for (let i = 1; i < rows.length; i++) { // skip header row
        if (i % 2 === 0)
          rows[i].style.backgroundColor = "#f2f2f2";
        else
          rows[i].style.backgroundColor = "#d9ead3";
      }
    });
  </script>
</body>
</html>
