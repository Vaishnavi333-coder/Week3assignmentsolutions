---Assignment 3----
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Products Dynamically</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
    }
    .input-group {
      margin: 10px auto;
      max-width: 500px;
    }
    .input-group input {
      width: 100%;
      padding: 8px;
      margin: 5px 0;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .error {
      color: red;
      display: none;
      margin: 5px 0;
    }
    section {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      margin-top: 20px;
    }
    .product {
      border: 1px solid #999;
      border-radius: 8px;
      padding: 10px;
      width: 200px;
      margin: 10px;
      text-align: center;
      box-shadow: 2px 2px 5px gray;
    }
    .product img {
      width: 100%;
      height: 120px;
      object-fit: cover;
      border-radius: 6px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      margin-top: 10px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h2>Add Products at Runtime</h2>
  
  <div class="input-group">
    <input type="url" id="imageUrl" placeholder="Enter image URL..." required>
    <div id="urlError" class="error">Please enter a valid image URL</div>
    
    <input type="text" id="productDesc" placeholder="Enter product description..." required>
    <div id="descError" class="error">Please enter a product description</div>
  </div>
  
  <button id="addBtn">Add Product</button>
  
  <section id="productSection"></section>

  <script>
    let count = 1;
    document.getElementById("addBtn").addEventListener("click", function() {
      // Get input values
      const imageUrl = document.getElementById("imageUrl").value.trim();
      const productDesc = document.getElementById("productDesc").value.trim();
      
      // Reset error messages
      document.getElementById("urlError").style.display = "none";
      document.getElementById("descError").style.display = "none";
      
      // Validate inputs
      let hasError = false;
      if (!imageUrl) {
        document.getElementById("urlError").style.display = "block";
        hasError = true;
      }
      if (!productDesc) {
        document.getElementById("descError").style.display = "block";
        hasError = true;
      }
      
      if (hasError) return;
      
      const section = document.getElementById("productSection");

      // Create product div
      const productDiv = document.createElement("div");
      productDiv.className = "product";

      // Create image using provided URL
      const img = document.createElement("img");
      img.src = imageUrl;
      img.alt = "Product Image " + count;
      
      // Add error handling for image loading
      img.onerror = function() {
        alert("Failed to load image. Please check the URL.");
        productDiv.remove();
      };

      // Create span for name
      const nameSpan = document.createElement("span");
      nameSpan.textContent = "Product " + count;
      nameSpan.style.display = "block";
      nameSpan.style.fontWeight = "bold";
      nameSpan.style.margin = "5px 0";

      // Create description
      const desc = document.createElement("p");
      desc.textContent = productDesc;

      // Append all to product div
      productDiv.appendChild(img);
      productDiv.appendChild(nameSpan);
      productDiv.appendChild(desc);

      // Add product to section
      section.appendChild(productDiv);

      count++;
      
      // Clear inputs
      document.getElementById("imageUrl").value = "";
      document.getElementById("productDesc").value = "";
    });
  </script>
</body>
</html>
